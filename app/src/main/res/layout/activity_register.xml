<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".register">

    <TextView
        android:id="@+id/textView"
        android:textColor="#8c8c8c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="60dp"
        android:text="Rejestracja"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textView2"
        android:textColor="#00ccff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:text="E-mail"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <EditText
        android:id="@+id/emailInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#8c8c8c"
        android:textColorHint="8c8c8c"
        android:textSize="20sp"
        android:hint="example@email.com"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8c8c8c"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/emailInput"/>

    <TextView
    android:id="@+id/textView3"
    android:textColor="#00ccff"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="32dp"
    android:layout_marginTop="15dp"
    android:text="Hasło"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/emailInput" />

    <EditText
        android:id="@+id/password1Input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#8c8c8c"
        android:textColorHint="8c8c8c"
        android:textSize="20sp"
        android:hint="np. hasło123"
        android:inputType="textPassword"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8c8c8c"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/password1Input"/>

    <TextView
        android:id="@+id/textView4"
        android:textColor="#00ccff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="20dp"
        android:text="Powtórz hasło"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password1Input" />

    <EditText
        android:id="@+id/password2Input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#8c8c8c"
        android:textColorHint="8c8c8c"
        android:textSize="20sp"
        android:hint="hasło123"
        android:inputType="textPassword"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8c8c8c999999"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/password2Input"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Zarejestruj"
        android:textColor="#000"
        android:background="#00ccff"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password2Input" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#8c8c8c"
        android:layout_marginHorizontal="0dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/registerButton"/>

    <TextView
        android:id="@+id/textView5"
        android:textColor="#8c8c8c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="80dp"
        android:text="Masz konto?"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/registerButton" />

    <Button
        android:id="@+id/loggingInButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logowanie"
        android:textColor="#000"
        android:background="#8c8c8c"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView5" />

</androidx.constraintlayout.widget.ConstraintLayout>