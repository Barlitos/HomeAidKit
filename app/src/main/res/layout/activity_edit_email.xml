<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="6dp"
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/menu"
        app:layout_constraintTop_toTopOf="parent">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".editEmail">

    <Button
        android:id="@+id/accountButton"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Konto"
        android:textColor="#000"
        android:background="#00ccff"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Wyloguj"
        android:textColor="#000"
        android:background="#00ccff"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView"
        android:textColor="#8c8c8c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:text="Edycja adresu email"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logOutButton"
        />

    <TextView
        android:id="@+id/textView2"
        android:textColor="#00ccff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:text="Nowy E-mail"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <EditText
        android:id="@+id/emailEdit1Input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#8c8c8c"
        android:textColorHint="#8c8c8c"
        android:textSize="20sp"
        android:hint="np. example@email.com"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8c8c8c"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/emailEdit1Input"/>

    <TextView
        android:id="@+id/textView3"
        android:textColor="#00ccff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:text="Powtórz nowy E-mail"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailEdit1Input" />

    <EditText
        android:id="@+id/emailEdit2Input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#8c8c8c"
        android:textColorHint="#8c8c8c"
        android:textSize="20sp"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8c8c8c"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/emailEdit2Input"/>

    <TextView
        android:id="@+id/textView4"
        android:textColor="#00ccff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        android:text="Hasło"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailEdit2Input" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#8c8c8c"
        android:textColorHint="#8c8c8c"
        android:textSize="20sp"
        android:hint="example123"
        android:inputType="textPassword"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8c8c8c"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/passwordInput"/>

    <Button
        android:id="@+id/approveEditEmailButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Zatwierdź edycję adresu email"
        android:textColor="#000"
        android:background="#00ccff"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordInput" />

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:background="#8c8c8c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/hometButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8c8c8c"
            app:srcCompat="@drawable/ic_baseline_home_24" />

        <ImageButton
            android:id="@+id/mostUsedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8c8c8c"
            app:srcCompat="@drawable/ic_baseline_stars_24" />

        <ImageButton
            android:id="@+id/categoriesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8c8c8c"
            app:srcCompat="@drawable/ic_baseline_playlist_add_24" />

        <ImageButton
            android:id="@+id/addDrugButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8c8c8c"
            app:srcCompat="@drawable/ic_baseline_add_circle_24" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>