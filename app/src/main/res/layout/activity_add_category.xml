<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context=".addCategory">

    <Button
        android:id="@+id/accountButton"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Konto"
        android:textColor="#000"
        android:background="#00ccff"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="Wyloguj"
        android:textColor="#000"
        android:background="#00ccff"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView"
        android:textColor="#8c8c8c"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="30dp"
        android:text="Dodawanie kategorii"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logOutButton"
        />

    <TextView
        android:id="@+id/textView2"
        android:textColor="#00ccff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="32dp"
        android:text="Nazwa Kategorii"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <EditText
        android:id="@+id/categoryInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#8c8c8c"
        android:textColorHint="8c8c8c"
        android:textSize="20sp"
        android:hint="np. Ból gardła"
        android:inputType="text"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#8c8c8c"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/categoryInput"/>

    <Button
        android:id="@+id/addCategoryButtonButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dodaj"
        android:textColor="#000"
        android:background="#00ccff"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoryInput" />

    <androidx.appcompat.widget.LinearLayoutCompat
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:background="#8c8c8c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/alphabeticalSortButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8c8c8c"
            app:srcCompat="@drawable/ic_baseline_sort_by_alpha_24" />

        <ImageButton
            android:id="@+id/dateSortButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8c8c8c"
            app:srcCompat="@drawable/ic_baseline_date_range_24" />

        <ImageButton
            android:id="@+id/mostUsedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8c8c8c"
            app:srcCompat="@drawable/ic_baseline_stars_24" />

        <ImageButton
            android:id="@+id/categoriesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8c8c8c"
            app:srcCompat="@drawable/ic_baseline_playlist_add_24" />

        <ImageButton
            android:id="@+id/addDrugButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#8c8c8c"
            app:srcCompat="@drawable/ic_baseline_add_circle_24" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>